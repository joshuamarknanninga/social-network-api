{{!-- Extending main layout --}}
{{#extends 'main'}}

{{#block 'body'}}
    <h1>Welcome to the Blog!</h1>

    {{#if posts.length}}
        <ul>
            {{#each posts}}
            <li>
                <a href="/post/{{this.id}}">
                    <h2>{{this.title}}</h2>
                    <p>Posted on {{this.createdAt}}</p>
                </a>
            </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No posts yet!</p>
    {{/if}}

{{/block}}
